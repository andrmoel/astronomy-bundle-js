{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "commonjs",
    "outDir": "./lib",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "paths": {
      "astronomy-bundle/*": [ "./src/*" ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
