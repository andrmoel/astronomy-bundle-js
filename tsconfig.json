{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
